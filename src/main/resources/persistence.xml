<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <persistence-unit name="gw2PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- native SQL, no @Entity classes required here. -->

        <properties>
            <!-- These will be overridden from ENV by HibernateUtil (no secrets) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate + Hikari -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.hikari.maximumPoolSize" value="5"/>

            <!-- Schema safety -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>

            <!-- Optional logging -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
